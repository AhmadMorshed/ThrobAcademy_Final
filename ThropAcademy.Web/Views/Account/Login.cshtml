@model LogInViewModel

<div class="login-page d-flex align-items-center justify-content-center">
    <div class="login-card shadow-lg p-4 rounded-4 position-relative" style="direction: ltr;">

        <div class="book-icon-wrapper">
            <i class="fas fa-user-plus book-icon"></i>
        </div>

        <div class="text-center mb-4">
            <h2 class="fw-bold text-gradient welcome-title">Welcome to LearnHub</h2>
            <p class="text-muted fade-in-delay">Log in to continue your learning journey</p>
        </div>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger" style="z-index: 10;">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <p class="mb-0">@error.ErrorMessage</p>
                }
            </div>
        }

        <form asp-action="Login" method="post" autocomplete="off" id="loginForm">
            
            <div class="form-group mb-3">
                <label for="Email" class="form-label fw-semibold">Email</label>
                <input type="email" class="form-control form-control-modern rounded-pill" id="Email" asp-for="Email" placeholder="Enter your email" required autocomplete="off" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3">
                <label for="Password" class="form-label fw-semibold">Password</label>
                <input type="password" class="form-control form-control-modern rounded-pill" id="Password" asp-for="Password" placeholder="Enter your password" required autocomplete="current-password" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="d-flex justify-content-between align-items-center mb-4">
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="RememberMe" asp-for="RememberMe" />
                    <label class="form-check-label" for="RememberMe">Remember me</label>
                </div>
                <a href="#" class="text-decoration-none small forgot-password-link">Forgot Password?</a>
            </div>

            <button type="submit" class="btn btn-gradient btn-submit w-100 py-2 rounded-pill" id="loginButton">Start Learning</button>
        </form>

        <p class="text-center mt-4 small signup-link">
            <a href="@Url.Action("SignUp", "Account")" class="text-decoration-none">Don't have an account? <span class="fw-semibold">Join now</span></a>
        </p>
    </div>
</div>


@* 🟢 ربط ملف CSS الخارجي *@
<link rel="stylesheet" href="~/css/Account/Login.css" /> 

@* 🟢 ربط ملف JavaScript الخارجي *@
@section Scripts {
    <script src="~/js/Account/Login.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
}}






















