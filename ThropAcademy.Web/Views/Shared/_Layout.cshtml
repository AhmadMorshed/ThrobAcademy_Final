@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Identity.Data
@inject SignInManager<ApplicationUser> signInManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ThrobAcademy.Web</title>

    @* ملفات CSS الأساسية *@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ThropAcademy.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Shared/_Layout.css" asp-append-version="true" />

    @* ملفات الخطوط والأيقونات *@
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700;800&family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    @* ⬇️ السطر الذي كان ينقصك (هذا سيحل مشكلة الـ InvalidOperationException) *@
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-book-reader"></i> ThropAcademy
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                        aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                         { 
                             <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="studentDropdown" role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    Resources
                                </a> 
                             <ul class="dropdown-menu" aria-labelledby="studentDropdown"> 
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="DriveSession" asp-action="Index">Drive Sessions</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="LiveSession" asp-action="Index">Live Sessions</a>
                            </li>
                              </ul>
                            </li>

                        }
                          
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Student"))
                        {<li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="studentDropdown" role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    Student Tools
                                </a> 
                            <ul class="dropdown-menu" aria-labelledby="studentDropdown">
                            <li class="nav-item me-2">
                                <a class="nav-link exam-nav-link d-flex align-items-center" asp-controller="Exam" asp-action="AvailableExams">
                                    <div class="exam-icon-container position-relative">
                                        <i class="bi bi-journal-check fs-4"></i>
                                        @await Component.InvokeAsync("ExamNotificationBadge")
                                    </div>
                                    <span class="ms-2 d-none d-lg-inline fw-semibold text-dark">Exams</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Transcription" asp-action="MyResults">
                                    <i class="bi bi-person-badge"></i> MyResults
                                </a>
                            </li>
                            </ul>
                                    </li>
                        }
                        @* --- قسم أدوات المدرب (Instructor Tools) --- *@
@if (signInManager.IsSignedIn(User) && User.IsInRole("Instructor"))
{
    @* <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle text-success fw-bold" href="#" id="instructorDropdown" role="button"
           data-bs-toggle="dropdown" aria-expanded="false">
            <i class="bi bi-person-workspace me-1"></i> Instructor Tools
        </a>
        <ul class="dropdown-menu shadow border-0" aria-labelledby="instructorDropdown">
            <li><h6 class="dropdown-header">إدارة التدريب</h6></li>
             *@
            @* رابط الداشبورد الجديد *@
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Transcription" asp-action="InstructorDashboard">
                    <i class="bi bi-speedometer2 text-success me-2"></i> Instructor Dashboard
                </a>
            </li>

            @* يمكنك إضافة روابط أخرى تخص المدرب هنا *@
    @*         <li>
                <a class="dropdown-item py-2" asp-controller="Course" asp-action="MyCourses">
                    <i class="bi bi-book me-2"></i> My Courses
                </a>
            </li>
            
            <li><hr class="dropdown-divider"></li>
            <li>
                <a class="dropdown-item py-2" asp-controller="Student" asp-action="InstructorStudentList">
                    <i class="bi bi-people me-2"></i> My Students
                </a>
            </li>
        </ul>
    </li> *@
}
                        @if (signInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    Admin Tools
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                    <li><h6 class="dropdown-header">إدارة الكورسات والطلاب</h6></li>
                                    <li><a class="dropdown-item" asp-controller="Course" asp-action="Index"><i class="fas fa-cube me-2"></i> Courses</a></li>
                                    <li><a class="dropdown-item" asp-controller="Student" asp-action="Index"><i class="fas fa-users me-2"></i> Students</a></li>
                                    <li><a class="dropdown-item" asp-controller="Instructor" asp-action="Index"><i class="fas fa-users me-2"></i> Instructor</a></li>

                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="User" asp-action="Index"><i class="fas fa-user-circle me-2"></i> Users</a></li>
                                    <li><a class="dropdown-item" asp-controller="Role" asp-action="Index"><i class="fas fa-user-circle me-2"></i> Roles</a></li>
                                    <li class="nav-item">
                                        <a class="nav-link text-primary fw-bold" asp-controller="Transcription" asp-action="AdminDashboard">
                                            <i class="bi bi-speedometer2"></i> Admin Dashboard
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0 align-items-lg-center">
                        <li class="nav-item me-lg-2 mb-2 mb-lg-0">
                            <a class="btn btn-action-ai" asp-controller="Transcription" asp-action="UploadMedia">
                                <i class="fas fa-brain"></i>Examination
                            </a>
                        </li>

                        @if (signInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="SignOut" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-action-logout">
                                        <i class="fas fa-sign-out-alt"></i> Sign Out
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a asp-controller="Account" asp-action="SignUp" class="btn btn-action-auth">
                                    <i class="fas fa-sign-in-alt"></i> Sign In
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid p-0">
        @* تغيير container لـ container-fluid لجعل الخلفية تغطي الشاشة كاملة *@
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="main-footer">
        <div class="container text-center">
            &copy; @DateTime.Now.Year - ThropAcademy.Web. All Rights Reserved.
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/Shared/_Layout.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>


</html>