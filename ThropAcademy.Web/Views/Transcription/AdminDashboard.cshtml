@model IEnumerable<Throb.Data.Entities.UserExamResult>
@{
    ViewData["Title"] = "لوحة تحكم الإدارة";
    var namesMap = ViewBag.CourseNames as Dictionary<int, string>;

    // حسابات إحصائية سريعة لضمان عدم حدوث خطأ تقسيم على صفر
    var totalExams = ViewBag.TotalExams ?? 0;
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<style>
    .admin-card {
        border-radius: 15px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: none;
    }

        .admin-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.05) !important;
        }

    .table-hover-custom tbody tr {
        transition: all 0.2s ease;
        border-bottom: 1px solid #f1f5f9 !important;
    }

        .table-hover-custom tbody tr:hover {
            background-color: #f8faff !important;
        }

    .status-badge {
        padding: 6px 12px;
        border-radius: 8px;
        font-size: 0.85rem;
        font-weight: 600;
    }

    .progress-mini {
        height: 6px;
        border-radius: 10px;
        background-color: #eee;
        overflow: hidden;
        margin-top: 4px;
        width: 100px;
    }

    .avatar-circle {
        width: 38px;
        height: 38px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        font-size: 0.9rem;
    }
</style>

<div class="container-fluid py-4" style="direction: rtl; background-color: #f4f7fe; min-height: 100vh; text-align: right;">
    <div class="mb-4 text-end">
        <h3 class="fw-bold text-dark">لوحة تحكم الأداء العام</h3>
        <p class="text-muted">مراقبة نتائج الطلاب وإحصائيات الاختبارات الذكية</p>
    </div>

    @* --- بطاقات الإحصائيات --- *@
    <div class="row g-4 mb-5">
        <div class="col-md-3">
            <div class="card admin-card shadow-sm p-3">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="bg-primary-subtle p-3 rounded-3 text-primary"><i class="bi bi-people-fill fs-3"></i></div>
                    <div class="text-end">
                        <h6 class="text-muted mb-0 small">إجمالي الاختبارات</h6>
                        <h4 class="fw-bold mb-0">@ViewBag.TotalExams</h4>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card admin-card shadow-sm p-3">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="bg-success-subtle p-3 rounded-3 text-success"><i class="bi bi-graph-up-arrow fs-3"></i></div>
                    <div class="text-end">
                        <h6 class="text-muted mb-0 small">نسبة النجاح</h6>
                        <h4 class="fw-bold mb-0">@ViewBag.PassRate%</h4>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card admin-card shadow-sm p-3">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="bg-warning-subtle p-3 rounded-3 text-warning"><i class="bi bi-star-fill fs-3"></i></div>
                    <div class="text-end">
                        <h6 class="text-muted mb-0 small">متوسط الدرجات</h6>
                        <h4 class="fw-bold mb-0">@ViewBag.AverageScore%</h4>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card admin-card shadow-sm p-3">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="bg-danger-subtle p-3 rounded-3 text-danger"><i class="bi bi-trophy fs-3"></i></div>
                    <div class="text-end">
                        <h6 class="text-muted mb-0 small">أعلى درجة</h6>
                        <h4 class="fw-bold mb-0">@ViewBag.TopScore%</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @* --- جدول النتائج --- *@
    <div class="card border-0 shadow-sm" style="border-radius: 20px; overflow: hidden;">
        <div class="card-header bg-white border-0 p-4 d-flex justify-content-between align-items-center">
            <div class="d-flex gap-2">
                <button class="btn btn-sm btn-light border"><i class="bi bi-filter me-1"></i> تصفية</button>
            </div>
            <h5 class="fw-bold mb-0 text-dark">آخر المحاولات المسجلة</h5>
        </div>
        <div class="table-responsive px-4 pb-4">
            <table class="table table-borderless align-middle text-end table-hover-custom">
                <thead class="text-muted" style="background-color: #f9fbfd;">
                    <tr>
                        <th class="py-3 px-3">المستخدم</th>
                        <th>اسم الدورة</th>
                        <th>نوع الامتحان</th>
                        <th>النسبة المئوية</th>
                        <th>التاريخ والوقت</th>
                        <th>الحالة التقديرية</th>
                        <th class="text-center">الشهادة</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var res in Model)
                        {
                            <tr>
                                <td class="py-3 px-3">
                                    <div class="d-flex align-items-center justify-content-end">
                                        <div class="text-end me-3">
                                            <div class="fw-bold text-dark" style="font-size: 0.9rem;">@res.UserId</div>
                                            <small class="text-muted" style="font-size: 0.75rem;">ID: #@res.Id</small>
                                        </div>
                                        <div class="avatar-circle bg-primary-subtle text-primary">
                                            @(!string.IsNullOrEmpty(res.UserId) ? res.UserId.Substring(0, 1).ToUpper() : "U")
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    @{
                                        var courseDisplayName = namesMap != null && namesMap.ContainsKey(res.CourseId)
                                        ? namesMap[res.CourseId]
                                        : "دورة #" + res.CourseId;
                                    }
                                    <span class="fw-semibold text-dark">@courseDisplayName</span>
                                </td>
                                <td>
                                    <span class="badge rounded-pill bg-secondary-subtle text-secondary px-3">
                                        @res.ExamType
                                    </span>
                                </td>
                                <td>
                                    <div class="d-flex flex-column align-items-end">
                                        <span class="fw-bold @(res.ScorePercentage >= 70 ? "text-success" : "text-danger")">
                                            @res.ScorePercentage%
                                        </span>
                                        <div class="progress-mini">
                                            <div class="progress-bar @(res.ScorePercentage >= 70 ? "bg-success" : "bg-danger")"
                                                 style="width: @res.ScorePercentage%"></div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="text-muted small">
                                        <i class="bi bi-calendar3 me-1"></i> @res.CompletedAt.ToString("yyyy/MM/dd")<br />
                                        <i class="bi bi-clock me-1"></i> @res.CompletedAt.ToString("HH:mm")
                                    </div>
                                </td>
                                <td>
                                    @if (res.ScorePercentage >= 70)
                                    {
                                        <span class="status-badge bg-success-subtle text-success border border-success-subtle">
                                            <i class="bi bi-check-circle-fill ms-1"></i> ناجح
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="status-badge bg-danger-subtle text-danger border border-danger-subtle">
                                            <i class="bi bi-x-circle-fill ms-1"></i> راسب
                                        </span>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (res.ScorePercentage >= 80)
                                    {
                                        <a asp-action="DownloadCertificate" asp-route-resultId="@res.Id"
                                           class="btn btn-sm btn-primary rounded-pill px-3 shadow-sm">
                                            <i class="bi bi-download me-1"></i> تحميل
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted small opacity-50">غير مؤهل</span>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center py-5 text-muted">
                                <i class="bi bi-clipboard-x fs-1 d-block mb-2"></i>
                                لا توجد سجلات متاحة للعرض حالياً
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>