@model Throb.Data.Entities.ExamRequestModel
@{
    ViewData["Title"] = "نظام التقييم الذكي - Throb Academy";
    var questions = Model?.Questions?.ToList() ?? new List<Throb.Data.Entities.Question>();

    if (!questions.Any() && Model?.ExamRequestQuestions != null)
    {
        questions = Model.ExamRequestQuestions.Where(x => x.Question != null).Select(x => x.Question).ToList();
    }

    var hasQuestions = questions.Any();
    var durationSeconds = (Model.DurationMinutes > 0 ? Model.DurationMinutes : 30) * 60;
    bool isAdmin = User.IsInRole("Admin");
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
<link rel="stylesheet" href="~/css/Transcription/ExamPreview.css"> @if (!isAdmin)
{
    <div id="start-overlay" class="text-center p-4">
        <div class="animate__animated animate__fadeInDown">
            <i class="bi bi-shield-lock text-primary" style="font-size: 5rem;"></i>
            <h2 class="fw-bold mt-4">جاهز لبدء الاختبار؟</h2>
            <p class="text-muted mb-4">بمجرد البدء، سيتم تفعيل نظام حماية الغش والدخول في وضع ملء الشاشة.</p>
            <button type="button" onclick="startExam()" class="btn btn-primary btn-lg px-5 py-3 rounded-pill fw-bold shadow-lg">
                ابدأ الاختبار الآن <i class="bi bi-play-fill ms-2"></i>
            </button>
        </div>
    </div>
}

<div class="page-content" dir="rtl" id="exam-area" style="display: @(isAdmin ? "block" : "none");">
    @if (hasQuestions)
    {
        <div class="sticky-exam-header shadow-sm">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-4 d-none d-md-block">
                        <div class="d-flex align-items-center gap-2">
                            <h6 class="fw-bold mb-0 text-primary"><i class="bi bi-journal-text me-2"></i> @Model.ExamType</h6>
                            @if (isAdmin)
                            {
                                <span class="admin-preview-badge">معاينة الإدارة</span>
                            }
                        </div>
                    </div>
                    <div class="col-6 col-md-4 text-center">
                        <div class="d-flex justify-content-center align-items-center gap-3">
                            <i class="bi bi-alarm fs-4 text-muted"></i>
                            <div id="timer" class="timer-box">@(isAdmin? Model.DurationMinutes + ":00" : "00:00")</div>
                        </div>
                    </div>
                    <div class="col-6 col-md-4">
                        <div class="d-flex flex-column align-items-end">
                            <span class="small text-muted fw-bold mb-1">التقدم: <span id="progress-text">0%</span></span>
                            <div class="progress w-100">
                                <div id="exam-progress" class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" style="width: 0%"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="container py-5">
        @if (!hasQuestions)
        {
            <div class="alert alert-info text-center p-5 rounded-4 shadow-sm border-0">
                <i class="bi bi-search fs-1 d-block mb-3"></i>
                <h4 class="fw-bold">لا توجد أسئلة متوفرة حالياً</h4>
                <a href="/" class="btn btn-outline-primary mt-3 px-4 rounded-pill">العودة للرئيسية</a>
            </div>
        }
        else
        {
            <form asp-action="SubmitExam" asp-controller="Transcription" method="post" id="examForm">
                @Html.AntiForgeryToken()
                <input type="hidden" name="ExamRequestId" value="@Model.ExamRequestId" />
                <input type="hidden" name="CourseId" value="@Model.CourseId" />

                <div class="row justify-content-center">
                    <div class="col-lg-10">
                        @for (int i = 0; i < questions.Count; i++)
                        {
                            var q = questions[i];
                            <div class="card q-card animate__animated animate__fadeInUp" style="animation-delay: @(i * 0.1)s">
                                <div class="card-body p-4 p-md-5">
                                    <input type="hidden" name="Answers[@i].QuestionId" value="@q.QuestionId" />
                                    <div class="d-flex align-items-start gap-4 mb-4">
                                        <div class="q-badge">@(i + 1)</div>
                                        <div>
                                            <h4 class="fw-bold text-dark mb-0">@q.QuestionText</h4>
                                        </div>
                                    </div>
                                    <div class="options-grid mt-4">
                                        @if (q.QuestionType?.ToLower() == "mcq" && q.Options != null)
                                        {
                                            <div class="row g-3">
                                                @foreach (var opt in q.Options)
                                                {
                                                    var radioId = $"opt_{q.QuestionId}_{opt.OptionId}";
                                                    <div class="col-md-6">
                                                        <input type="radio" class="btn-check" name="Answers[@i].SelectedOption" id="@radioId" value="@opt.OptionText" required onchange="updateProgress()" @(isAdmin ? "disabled" : "")>
                                                        <label class="option-item w-100" for="@radioId">
                                                            <div class="me-3"><i class="bi bi-circle"></i></div>
                                                            <span>@opt.OptionText</span>
                                                        </label>
                                                    </div>
                                                }
                                            </div>
                                        }
                                        else if (q.QuestionType?.ToLower() == "truefalse")
                                        {
                                            <div class="row g-3">
                                                <div class="col-md-6">
                                                    <input type="radio" class="btn-check" name="Answers[@i].SelectedOption" id="true_@i" value="True" required onchange="updateProgress()" @(isAdmin ? "disabled" : "")>
                                                    <label class="option-item w-100" for="true_@i"><i class="bi bi-check2-circle me-3 fs-5"></i> صحيحة</label>
                                                </div>
                                                <div class="col-md-6">
                                                    <input type="radio" class="btn-check" name="Answers[@i].SelectedOption" id="false_@i" value="False" required onchange="updateProgress()" @(isAdmin ? "disabled" : "")>
                                                    <label class="option-item w-100" for="false_@i"><i class="bi bi-x-circle me-3 fs-5"></i> خاطئة</label>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        }

                        <div class="text-center mt-5 mb-5">
                            @if (!isAdmin)
                            {
                                <button type="submit" class="btn btn-primary px-5 py-3 rounded-pill fw-bold shadow-lg submit-btn">إنهاء وتسليم الإجابات <i class="bi bi-send-fill ms-2"></i></button>
                            }
                            else
                            {
                                <a href="javascript:history.back()" class="btn btn-secondary px-5 py-3 rounded-pill fw-bold">العودة للخلف (وضع المعاينة)</a>
                            }
                        </div>
                    </div>
                </div>
            </form>
        }
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // تمرير المتغيرات من السيرفر للـ JS
        const CONFIG = {
            isAdmin: @isAdmin.ToString().ToLower(),
            durationSeconds: @durationSeconds,
            totalQuestions: @questions.Count
        };
    </script>
    <script src="~/js/Transcription/ExamPreview.js"></script>
}