@{
    Layout = null;
    var courseId = ViewBag.CourseId;
}
<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <title>نتيجة استخراج النص</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Cairo', sans-serif;
            background: #f8fafc;
        }

        .transcript-box {
            background: white;
            border-radius: 12px;
            padding: 25px;
            border: 1px solid #e2e8f0;
            max-height: 400px;
            overflow-y: auto;
            white-space: pre-wrap;
        }
    </style>
</head>
<body class="py-5">
    <div class="container">
        <div class="card border-0 shadow-sm p-4 rounded-4">
            <div class="text-center mb-4">
                <span class="badge bg-success mb-2 px-3 py-2">تم الاستخراج بنجاح ✅</span>
                <h2 class="fw-bold">النص المستخرج من المحاضرة</h2>
            </div>

            <div class="transcript-box mb-4 shadow-sm">@ViewBag.Transcription</div>

            <div class="card bg-light border-0 p-4 rounded-3 text-center">
                <h5 class="mb-3 fw-bold">ماذا تريد أن تفعل بهذا النص؟</h5>
                <form asp-action="GenerateQuestions" method="post">
                    <input type="hidden" name="courseId" value="@courseId" />
                    <input type="hidden" name="transcript" value="@ViewBag.Transcription" />

                    <div class="d-flex gap-3 justify-content-center">
                        <button type="submit" name="type" value="mcq" class="btn btn-primary btn-lg px-4 fw-bold">📝 توليد اختيار من متعدد</button>
                        <button type="submit" name="type" value="truefalse" class="btn btn-outline-success btn-lg px-4 fw-bold">✅ توليد صح وخطأ</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>