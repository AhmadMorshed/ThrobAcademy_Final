@model ThropAcademy.Web.Models.AttendanceReportViewModel
@{
    ViewData["Title"] = $"تقرير حضور: {Model.SessionTitle}";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
<link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700;800&display=swap" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
    body {
        font-family: 'Cairo', sans-serif;
        background-color: #f8f9fa;
        direction: rtl;
        text-align: right;
    }

    .report-card {
        border-radius: 15px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.1);
        background: white;
        padding: 25px;
        margin-top: 20px;
    }

    .text-purple {
        color: #6B46C1;
    }

    .table thead th {
        background-color: #6B46C1;
        color: white;
        border: none;
        padding: 15px;
    }

    .status-badge {
        font-size: 0.85rem;
        padding: 5px 12px;
        border-radius: 20px;
    }

    .zoom-sync-btn {
        background-color: #F5A623;
        color: white;
        border: none;
        transition: all 0.3s ease;
    }

        .zoom-sync-btn:hover {
            background-color: #e09313;
            transform: scale(1.05);
            color: white;
        }
</style>

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="text-primary fw-bold"><i class="fas fa-file-invoice me-2"></i> تقرير حضور الجلسة</h1>
        <h2 class="text-dark fw-bold mt-2">@Model.SessionTitle</h2>
        <div class="mt-3">
            <p class="text-muted mb-1">📅 تاريخ الجلسة: @Model.SessionDate.ToString("dd/MM/yyyy HH:mm")</p>
            <p class="text-muted">⏱️ المدة الأصلية المخطط لها: @Model.SessionDuration دقيقة</p>
        </div>

        <form asp-action="RecordAttendance" method="post" class="mt-4">
            <input type="hidden" name="sessionId" value="@Context.Request.RouteValues["id"]" />
            <button type="submit" class="btn zoom-sync-btn rounded-pill px-4 py-2 fw-bold shadow-sm">
                <i class="fas fa-sync-alt me-2"></i> تحديث البيانات من زووم الآن
            </button>
        </form>
    </div>

    @if (Model.Records != null && Model.Records.Any())
    {
        <div class="report-card">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h4 class="text-purple fw-bold mb-0">
                    <i class="fas fa-users me-2"></i> قائمة المشاركين (@Model.Records.Count)
                </h4>
                <span class="badge bg-light text-dark border p-2">آخر تحديث: @DateTime.Now.ToString("HH:mm")</span>
            </div>

            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th class="text-center">اسم المشارك (زووم)</th>
                            <th class="text-center">حالة الحساب</th>
                            <th class="text-center">البريد الإلكتروني</th>
                            <th class="text-center">مدة الحضور</th>
                            <th class="text-center">النسبة من الجلسة</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var record in Model.Records)
                        {
                            // حساب النسبة المئوية للحضور
                            double percentage = Model.SessionDuration > 0
                            ? (double)record.DurationMinutes / Model.SessionDuration * 100 : 0;

                            <tr>
                                <td class="fw-bold">@record.ParticipantName</td>
                                <td class="text-center">
                                    @if (!string.IsNullOrEmpty(record.UserId))
                                    {
                                        <span class="badge bg-success-subtle text-success border border-success status-badge">
                                            <i class="fas fa-check-circle me-1"></i> مستخدم مسجل
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-light text-muted border status-badge">زائر / غير مسجل</span>
                                    }
                                </td>
                                <td class="text-muted">@record.ParticipantEmail</td>
                                <td class="text-center">@record.DurationMinutes دقيقة</td>
                                <td class="text-center">
                                    <div class="d-flex align-items-center justify-content-center">
                                        <div class="progress flex-grow-1 mx-2" style="height: 8px; min-width: 80px;">
                                            <div class="progress-bar @(percentage >= 50 ? "bg-success" : "bg-danger")"
                                                 role="progressbar" style="width: @percentage%"></div>
                                        </div>
                                        <span class="fw-bold @(percentage >= 50 ? "text-success" : "text-danger")">
                                            @percentage.ToString("F0")%
                                        </span>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info py-5 shadow-sm rounded-4 text-center border-0" style="background-color: #e3f2fd;">
            <i class="fas fa-info-circle fa-4x mb-3 text-info"></i>
            <h3 class="fw-bold text-dark">لا توجد بيانات حضور مسجلة حتى الآن</h3>
            <p class="lead text-muted">تأكد من انتهاء الجلسة تماماً، ثم اضغط على زر "تحديث البيانات من زووم" أعلاه لمعالجة التقرير.</p>
        </div>
    }

    <div class="mt-5 text-center">
        <a asp-action="Index" class="btn btn-dark px-5 py-2 rounded-pill shadow-sm">
            <i class="fas fa-arrow-right me-2"></i> العودة لقائمة الجلسات
        </a>
    </div>
</div>

@section Scripts {
    <script>
        // كود بسيط لإظهار Tooltip عند التأشير على أيقونة التوثيق
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[title]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        })
    </script>
}