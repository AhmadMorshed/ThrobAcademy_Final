@{
    Layout = null;
    var courses = ViewBag.Courses as IEnumerable<Throb.Data.Entities.Course>;
}
<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>رفع المحاضرة - Throb Academy</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <link rel="stylesheet" href="~/css/Transcription/UploadMedia.css" asp-append-version="true" />
</head>
<body data-theme="light">

    <header>
        <div class="logo">
            <i class="fa-solid fa-graduation-cap"></i> Throb Academy
        </div>
        <h1 class="title d-none d-md-flex">
            <i class="fa-solid fa-wand-magic-sparkles"></i> المعالجة الذكية
        </h1>
        <button class="theme-toggle" id="themeToggle">🌙</button>
    </header>

    @* ... الأكواد العلوية تبقى كما هي ... *@

    <main class="container py-5">
        <div class="row justify-content-center mb-5">
            <div class="col-md-8 col-lg-6">
                <div class="quick-access-wrapper">
                    <div class="dropdown">
                        <button class="btn bank-dropdown-btn w-100 d-flex justify-content-between align-items-center shadow-sm" type="button" data-bs-toggle="dropdown">
                            <span><i class="fa-solid fa-layer-group me-2"></i> تصفح بنوك الأسئلة</span>
                            <i class="fa-solid fa-chevron-down small"></i>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-dark w-100 shadow-lg border-0 animate slideIn">
                            @if (courses != null && courses.Any())
                            {
                                foreach (var c in courses)
                                {
                                    <li>
                                        <a class="dropdown-item d-flex align-items-center py-2" href="/Transcription/QuestionBank?courseId=@c.Id">
                                            <i class="fa-solid fa-book-bookmark me-3 text-info"></i> @c.Name
                                        </a>
                                    </li>
                                }
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-10 col-lg-8">
                <div class="main-glass-card shadow-lg p-4 p-md-5">
                    <div class="text-center mb-5">
                        <h2 class="fw-bold gradient-text">استخراج الأسئلة الذكي</h2>
                        <p class="text-muted">حول محاضراتك المرئية والصوتية إلى أسئلة تفاعلية بدقائق</p>
                    </div>

                    <form asp-action="UploadMedia" method="post" enctype="multipart/form-data" id="uploadForm">
                        <div class="step-item mb-4">
                            <label class="form-label fw-bold d-flex align-items-center">
                                <span class="step-number">1</span> اختر الكورس التعليمي
                            </label>
                            <select id="courseSelect" name="courseId" class="form-select custom-select-lg" required>
                                <option value="">-- حدد المادة التعليمية --</option>
                                @if (courses != null)
                                {
                                    foreach (var c in courses)
                                    {
                                        <option value="@c.Id">@c.Name</option>
                                    }
                                }
                            </select>
                            <div class="mt-2">
                                <a href="#" id="goToBankBtn" class="bank-link" style="display:none;">
                                    <i class="fa-solid fa-arrow-right-to-bracket me-1"></i> الدخول لبنك أسئلة هذا الكورس
                                </a>
                            </div>
                        </div>

                        <div class="step-item mb-5">
                            <label class="form-label fw-bold d-flex align-items-center">
                                <span class="step-number">2</span> ارفع ملف المحاضرة
                            </label>
                            <div class="upload-zone" id="dropZone">
                                <input type="file" name="mediaFile" id="mainFileInput" class="file-input-hidden" accept="audio/*,video/*" required />
                                <div class="upload-content py-4">
                                    <i class="fa-solid fa-cloud-arrow-up fa-3x mb-3 text-primary"></i>
                                    <h5>اسحب الملف هنا أو اضغط للتصفح</h5>
                                    <p class="small text-muted" id="fileNameDisplay">يدعم الفيديو (MP4) والصوت (MP3, WAV)</p>
                                </div>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary-gradient w-100 py-3 fw-bold shadow">
                            <i class="fa-solid fa-wand-magic-sparkles me-2"></i> بدء المعالجة بالذكاء الاصطناعي
                        </button>
                    </form>

                    <div class="separator my-5 text-muted small">أو عبر</div>

                    <div class="recording-section text-center">
                        <div class="d-flex justify-content-center gap-3 mb-4">
                            <button id="startRecording" class="btn btn-outline-secondary rounded-pill px-4">🎥 تسجيل فيديو</button>
                            <button id="startAudioRecording" class="btn btn-outline-secondary rounded-pill px-4">🎙️ تسجيل صوت</button>
                        </div>

                        <div class="preview-area mb-3">
                            <video id="preview" width="100%" class="rounded-3 shadow-sm" style="display:none;" autoplay muted></video>
                            <audio id="audioPreview" controls class="w-100" style="display:none;"></audio>
                        </div>

                        <div id="recordingControls" style="display:none;">
                            <button id="stopRecording" class="btn btn-danger rounded-circle p-3 mb-3 animate-pulse">
                                <i class="fa-solid fa-square fa-xl"></i>
                            </button>
                            <p class="text-danger small fw-bold">جاري التسجيل الآن...</p>
                        </div>

                        <form asp-action="UploadMedia" method="post" enctype="multipart/form-data" id="recordedForm">
                            <input type="hidden" name="courseId" id="hiddenCourseId" />
                            <input type="file" name="mediaFile" id="recordedFile" style="display:none;" />
                            <button type="submit" id="uploadRecorded" class="btn btn-success-gradient w-100 py-3 d-none">
                                <i class="fa-solid fa-cloud-upload me-2"></i> رفع التسجيل المباشر
                            </button>
                        </form>
                    </div>

                    <div id="loading" class="text-center mt-4" style="display:none;">
                        <div class="spinner-grow text-primary" role="status"></div>
                        <p class="mt-2 fw-bold text-primary">جاري استخراج الأسئلة.. لا تغلق الصفحة</p>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <footer>
        &copy; @DateTime.Now.Year Throb Academy - جميع الحقوق محفوظة
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/Transcription/UploadMedia.js" asp-append-version="true"></script>
</body>
</html>