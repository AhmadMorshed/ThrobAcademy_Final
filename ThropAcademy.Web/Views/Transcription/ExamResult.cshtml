@model Throb.Data.Entities.UserExamResult
@{
    ViewData["Title"] = "نتيجتك - Throb Academy";
    double percentage = Math.Round(Model?.ScorePercentage ?? 0, 1);
    int correctAnswers = Model?.CorrectAnswers ?? 0;
    int totalQuestions = Model?.TotalQuestions ?? 0;
    bool isPassed = percentage >= 70;

    // فئات CSS بناءً على الحالة
    string statusClass = isPassed ? "status-pass" : "status-fail";
}
<link href="~/css/Transcription/ExamResult.css" rel="stylesheet" />
<div class="result-body @statusClass" dir="rtl">
    <div class="premium-card animate-in">
        <div class="row g-0">
            <div class="col-lg-5 status-sidebar">
                <div class="chart-container">
                    <svg class="circular-chart" viewBox="0 0 220 220">
                        <circle class="circle-bg" cx="110" cy="110" r="90"></circle>
                        <circle class="circle-fill" id="progressCircle" cx="110" cy="110" r="90" data-pct="@percentage"></circle>
                    </svg>
                    <div class="chart-info">
                        <h2>@percentage<small>%</small></h2>
                        <div class="status-label">@(isPassed ? "نـاجـح" : "راسـب")</div>
                    </div>
                </div>

                <div class="mt-4 text-center px-3">
                    <h3 class="fw-bold mb-1 status-title">
                        @(isPassed ? "مبارك لك النجاح!" : "فرصة سعيدة لاحقاً")
                    </h3>
                    <span class="text-muted small">@Model?.ExamType</span>
                </div>
            </div>

            <div class="col-lg-7 content-area">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h4 class="fw-bold m-0 text-dark">تحليل الأداء</h4>
                    <span class="small text-muted"><i class="bi bi-calendar3 me-1"></i> @Model?.CompletedAt.ToString("yyyy/MM/dd")</span>
                </div>

                <div class="message-box">
                    <i class="bi bi-info-circle-fill me-2 message-icon"></i>
                    <span class="message-text">
                        @(isPassed
                                                ? "أداء متميز! لقد اجتزت الاختبار بنجاح. يمكنك الآن الانتقال للمرحلة التالية من مسارك التعليمي."
                                                : "لا تجعل النتيجة تحبطك. الاختبار هو مجرد وسيلة لاكتشاف نقاط الضعف، ننصحك بمراجعة الوحدات التعليمية.")
                    </span>
                </div>

                <div class="bento-grid">
                    <div class="bento-item">
                        <div class="item-icon"><i class="bi bi-check2-all"></i></div>
                        <div class="item-label">الإجابات الصحيحة</div>
                        <div class="item-value">@correctAnswers من @totalQuestions</div>
                    </div>
                    <div class="bento-item">
                        <div class="item-icon"><i class="bi bi-bar-chart-line"></i></div>
                        <div class="item-label">مستوى الأداء</div>
                        <div class="item-value">@(percentage >= 90 ? "امتياز" : percentage >= 70 ? "جيد جداً" : "يحتاج تحسين")</div>
                    </div>
                    <div class="bento-item">
                        <div class="item-icon"><i class="bi bi-clock"></i></div>
                        <div class="item-label">وقت الإكمال</div>
                        <div class="item-value">@Model?.CompletedAt.ToString("HH:mm tt")</div>
                    </div>
                    <div class="bento-item">
                        <div class="item-icon"><i class="bi bi-trophy"></i></div>
                        <div class="item-label">الرتبة المحققة</div>
                        <div class="item-value">@(isPassed ? "طالب متفوق" : "طالب مكافح")</div>
                    </div>
                </div>

                <div class="btn-stack mt-4">
                    <button onclick="window.print()" class="btn-print">
                        <i class="bi bi-printer me-2"></i> طباعة التقرير
                    </button>
                    <a href="/" class="btn-home">
                        <i class="bi bi-house-door"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <script src="~/js/Transcription/ExamResult.js" asp-append-version="true"></script>
</div>